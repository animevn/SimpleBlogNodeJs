<%- include("main/header") -%>

<div class="container-fluid px-0">
  <%- include("main/navbar") -%>

  <div class="container mt-4 px-0 mx-auto">

    <div class="card col-sm-12 col-11 shadow-sm p-4 mx-auto">
      <form action="/updatepost" class="was-validated" method="post">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text bg-warning">Post Title</span>
          </div>
          <input type="text" class="form-control" id="post_title" autocomplete="off"
                 name="post_title" value="<%= post.title %>" required>
          <div class="valid-feedback">
            Title OK.
          </div>
          <div class="invalid-feedback">
            Please fill title of post
          </div>
        </div>

        <div class="input-group mb-3">
        <textarea class="form-control text-justify" id="text_area"
                  name="post_body" rows="5" placeholder="Post body" required>
          <%= post.body %>
        </textarea>
          <div class="valid-feedback">
            Post content OK.
          </div>
          <div class="invalid-feedback">
            Please fill post body
          </div>
        </div>

        <div class="form-group form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox"
                   name="remember" required> I agree on conditions.
            <div class="valid-feedback">
              Requirement OK.
            </div>
            <div class="invalid-feedback">
              Check this checkbox to continue.
            </div>
          </label>
        </div>
        <button type="submit" class="btn btn-warning" name="update" value="<%= id %>">
          Submit
        </button>
      </form>
    </div>

  </div>

</div>

<%- include("main/footer") -%>